<%= form_for @user do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <h1>Sign Up</h1>
      </div>
    </div>

      <% if @user.errors.any? %>
        <div class="row">
          <div class="col-12 col-md-6 mx-auto">
          <% @user.errors.full_messages.each do |msg| %>
            <p class="alert alert-warning"><%= msg %></li>
          <% end %>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-12 col-md-6 mx-auto">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mx-auto">
          <%= f.label(:name, "User Name")%>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mx-auto">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mx-auto">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mx-auto py-2">
          <%= f.submit "Sign up!", class: "btn btn-primary btn-block" %>
        </div>
      </div>
  </div>
<% end %>
