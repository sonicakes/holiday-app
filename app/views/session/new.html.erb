<%= form_tag login_path do %>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <h1 class="text-white">Log In</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto text-white">
        <%= label_tag :email %>
        <%= email_field_tag :email, "", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto text-white">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto py-2">
        <%= button_tag type: 'submit', class: "btn btn-primary btn-block", style: "background: #000066;" do %>
          <i class="fas fa-sign-in-alt"></i> Log In!
        <% end %>
      </div>
    </div>
  </div>
<% end %>
