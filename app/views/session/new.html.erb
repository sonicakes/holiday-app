<%= form_tag login_path do %>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <h1>Log In</h1>
      </div>
    </div>
      <% if flash[:error] %>
      <div class="row">
        <div class="col-12 col-md-6 mx-auto">
          <p class="alert alert-warning"><%= flash[:error] %></p>
        </div>
      </div>
      <% end %>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <%= label_tag :email %>
        <%= email_field_tag :email, "", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto py-2">
        <%= submit_tag "Log in", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>
